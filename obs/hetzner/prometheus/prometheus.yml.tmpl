global:
  scrape_interval: 15s
  evaluation_interval: 15s

remote_write:
  - url: "__GRAFANA_CLOUD_REMOTE_WRITE_URL__"
    basic_auth:
      username: "__GRAFANA_CLOUD_USERNAME__"
      password_file: /etc/prometheus/secrets/grafana_cloud_api_key

scrape_configs:
  - job_name: blackbox
    static_configs:
      - targets: ["blackbox:9115"]

  - job_name: blackbox_ssh
    metrics_path: /probe
    params:
      module: [tcp_connect]
    file_sd_configs:
      - files: ["/etc/prometheus/targets/ssh.json"]
        refresh_interval: 30s
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - target_label: __address__
        replacement: blackbox:9115
      - source_labels: [__param_target]
        target_label: instance

  - job_name: blackbox_postgres
    metrics_path: /probe
    params:
      module: [tcp_connect]
    file_sd_configs:
      - files: ["/etc/prometheus/targets/postgres.json"]
        refresh_interval: 30s
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - target_label: __address__
        replacement: blackbox:9115
      - source_labels: [__param_target]
        target_label: instance

  - job_name: blackbox_redis
    metrics_path: /probe
    params:
      module: [tcp_connect]
    file_sd_configs:
      - files: ["/etc/prometheus/targets/redis.json"]
        refresh_interval: 30s
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - target_label: __address__
        replacement: blackbox:9115
      - source_labels: [__param_target]
        target_label: instance


